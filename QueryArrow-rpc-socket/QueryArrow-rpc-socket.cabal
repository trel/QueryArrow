  hs-source-dirs:  src
  main-is: TCPMain.hs
  build-depends:
                   base >= 4,
                   containers,
                   mtl,
                   aeson,
                   scientific,
                   transformers,
                   semigroups,
                   semigroupoids,
                   unordered-containers,
                   resourcet,
                   network,
