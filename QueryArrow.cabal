  hs-source-dirs:  src
  exposed-modules: SQL.HDBC.PostgreSQL
  build-depends:
                   base >= 4,
                   containers,
                   mtl,
                   transformers,
                   semigroups,
                   semigroupoids,
                   HDBC-postgresql,
                   HDBC,
                   conduit-combinators,
                   conduit,
                   utf8-string,
                   resourcet
