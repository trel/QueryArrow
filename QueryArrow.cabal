                   resourcet,
                   async,
                   time,
                   hslogger,
                   exceptions,
                   utf8-string,
                   regex-tdfa,
                   monad-control,
                   lifted-async,
                   namespace >= 0.1.2.2,
                   lattices,
                   semibounded-lattices,
                   network,
                   json-rpc,
                   conduit-extra,
                   monad-logger,
                   fast-logger,
                   constraints,
                   yesod,
                   template-haskell
  ghc-options:     -Wall -fPIC -threaded
